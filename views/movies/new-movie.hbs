<h2>Create a Book</h2>

<form action="/movies/create" method="post">
    <label> title
        <input type="text" name="title">
    </label>
    
    <label> genre
        <input type="text" name="genre">
    </label>
    
    <label> plot
        <input type="text" name="plot">
    </label>
    
    <select name="cast" multiple>
        {{#each celebridades}}
            <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select>
    
    <button type="submit">Submit</button>


</form>